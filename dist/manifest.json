{
  "manifest_version":2,
  "name":"NoteEasy",
  "description":"Crea notas en las webs que visitas.",
  "version":"1.0",
  "browser_action":{
    "default_popup":"index.html",
    "default_title":"NoteEasy",
    "default-icon":{
      "16": "src/img/logo16.png",
      "24": "src/img/logo24.png",
      "32": "src/img/logo32.png",
      "128":"src/img/logo128.png"
    }
  },
  "web_accessible_resources":[
    "src/img/facebook.svg",
    "src/img/instagram.svg",
    "src/img/github.svg",
    "src/img/logo128.png",
    "src/img/envelope.svg",
    "src/img/coins.svg",
    "src/img/eye-slash.svg",
    "src/img/trash.svg",
    "src/img/comment-dots.svg",
    "src/img/exclamation-triangle.svg",
    "src/img/cog.svg"
  ],
  "commands":{
    "showHiddenNotes":{
      "suggested-key":{
        "default":"Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Muestra notas ocultas en la pestaña activa"
    },
     "createNote":{
        "suggested-key":{
          "default":"Ctrl+Shift+A",
          "mac": "Command+Shift+A"
        },
        "description": "Crea una nueva nota en la pestaña activa"
      }
  },
  "icons":{
    "16": "src/img/logo16.png",
    "24": "src/img/logo24.png",
    "32": "src/img/logo32.png",
    "128":"src/img/logo128.png"
  },

  "permissions":[
    "tabs",
    "storage", 
    "activeTab",
    "<all_urls>"
  ],
  "background":{
    "scripts":["background/background.js"], 
    "persistent": false 
  },
  "content_scripts": [
   {
     "matches":["<all_urls>"],
     "js":[
      "contentScript/contentScript.js"
    ],
     "css":["contentScript/contentScript.css"]
   }
 ]
}