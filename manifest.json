{
  "manifest_version":2,
  "name":"Note Easy",
  "description":"Guarda y muestra notas en tus webs favoritas",
  "version":"0.1",
  "browser_action":{
    "default_popup":"index.html",
    "default_title":"Note Easy"
  },
  "permissions":["tabs","storage", "activeTab"],
  "background":{
		"scripts":["background/background.js"], 
		"persistent": false 
	},
  "content_scripts": [
   {
     "matches":["<all_urls>"],
     "js":["contentScripts/contentScript.js"],
     "css":["contentScripts/style.css"]
   }
 ]
}